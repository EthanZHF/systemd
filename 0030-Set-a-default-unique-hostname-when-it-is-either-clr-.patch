From: Ikey Doherty <michael.i.doherty@intel.com>
Date: Thu, 14 Apr 2016 19:15:46 +0100
Subject: [PATCH 30/30] Set a default, unique, hostname, when it is either
 'clr' or 'localhost'

Signed-off-by: Ikey Doherty <michael.i.doherty@intel.com>
---
 src/core/hostname-setup.c | 41 +++++++++++++++++++++++++++++++++++++++++
 src/core/hostname-setup.h |  2 ++
 src/core/main.c           |  3 +++
 3 files changed, 46 insertions(+)

diff --git a/src/core/hostname-setup.c b/src/core/hostname-setup.c
index d92a9a7..abb296f 100644
--- a/src/core/hostname-setup.c
+++ b/src/core/hostname-setup.c
@@ -22,6 +22,9 @@
 #include <errno.h>
 #include <stdio.h>
 #include <stdlib.h>
+#include <limits.h>
+#include <unistd.h>
+#include <string.h>
 
 #include "alloc-util.h"
 #include "fileio.h"
@@ -68,3 +71,41 @@ int hostname_setup(void) {
         log_info("Set hostname to <%s>.", hn);
         return 0;
 }
+
+int set_first_hostname(void)
+{
+        char h[HOST_NAME_MAX+1];
+        h[HOST_NAME_MAX] = '\0';
+        _cleanup_free_ char *n_host = NULL;
+        _cleanup_free_ char *mid = NULL;
+
+        if (access("/etc/hostname", F_OK) == 0) {
+                return 1;
+        }
+
+        if (gethostname(h, HOST_NAME_MAX) != 0) {
+                return 0;
+        }
+
+        if (!streq(h, "clr") && !streq(h, "localhost")) {
+                return 0;
+        }
+
+        if (read_hostname_config("/etc/machine-id", &mid) != 0) {
+                /* First boot, use transient machine-id until synced */
+                if (read_hostname_config("/run/machine-id", &mid) != 0) {
+                        return 0;
+                }
+        }
+
+        if (!asprintf(&n_host, "clr-%s", mid)) {
+                return 0;
+        }
+
+        if (sethostname_idempotent(n_host) != 0) {
+                return 1;
+        }
+
+        return 0;
+}
+
diff --git a/src/core/hostname-setup.h b/src/core/hostname-setup.h
index 8dc3a9e..91c83f4 100644
--- a/src/core/hostname-setup.h
+++ b/src/core/hostname-setup.h
@@ -22,3 +22,5 @@
 ***/
 
 int hostname_setup(void);
+
+int set_first_hostname(void);
diff --git a/src/core/main.c b/src/core/main.c
index 64c3643..f34e13d 100644
--- a/src/core/main.c
+++ b/src/core/main.c
@@ -1618,6 +1618,9 @@ int main(int argc, char *argv[]) {
 
                 hostname_setup();
                 machine_id_setup(NULL);
+                if (set_first_hostname() == 0) {
+                        log_error("Failed to initialise default hostname");
+                }
                 loopback_setup();
                 bump_unix_max_dgram_qlen();
 
