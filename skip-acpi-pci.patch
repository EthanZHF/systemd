 }
 
+static int acpi_status_disabled(char *sysfspath)
+{
+	FILE *file;
+	unsigned int i;
+	char newpath[4096];
+	char line[128];
+	sprintf(newpath, "%s/status", sysfspath);
+	file = fopen(newpath, "r");
+	if (!file)
+		return 0;
+	line[0] = 0;
+	fgets(line, 128, file);
+	fclose(file);
+	i = strtoull(line, NULL, 10);
+	
+	if (strstr(sysfspath, "acpi") && ((i & 1) == 0))
+		return 1;
+	return 0;
+}
