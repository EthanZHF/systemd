         uint32_t u;
-        random_bytes(&u, sizeof(u));
+
+#ifdef USE_RDRAND
+        if (cpu_has_rdrand())
+                u = rdrand_32();
+        else
+#endif
+        {
+                random_bytes(&u, sizeof(u));
+        }
         return u;
 }
