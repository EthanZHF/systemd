+extern int cpu_has_rdrand(void);
+extern uint16_t rdrand_16(void);
+extern uint32_t rdrand_32(void);
+extern uint64_t rdrand_64(void);
+extern void random_rdrand(void *p, size_t n);
+#endif
+
